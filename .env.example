# SeaweedFS Configuration
# Copy this file to .env and update with your values

# Server Configuration
ANSIBLE_HOST=192.168.1.100
ANSIBLE_USER=root
ANSIBLE_SSH_PRIVATE_KEY_FILE=~/.ssh/id_rsa

# SeaweedFS Version
SEAWEEDFS_VERSION=3.66

# Installation Paths
SEAWEEDFS_INSTALL_DIR=/usr/local/bin
SEAWEEDFS_DATA_DIR=/data/seaweedfs
SEAWEEDFS_LOG_DIR=/var/log/seaweedfs

# Master Configuration
MASTER_PORT=9333
MASTER_PEERS=

# Volume Configuration
VOLUME_PORT=8080
VOLUME_MAX=100
VOLUME_MSERVER=localhost:9333

# Filer Configuration
FILER_PORT=8888
FILER_MASTER=localhost:9333

# S3 API Configuration
S3_PORT=8333
S3_FILER=localhost:8888

# Replication (000 = no replication, 001 = 1 copy on different rack, etc.)
DEFAULT_REPLICATION=000
